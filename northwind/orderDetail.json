{
    "class": "northwindModel.orderDetail",
    "inherits": "commons.item",
    "type": "BASIC",
    
    "valueTypes": [
        {
            "name": "unitPrice",
            "dataType": "DECIMAL",
            "required": true
        },
        {
            "name": "total",
            "dataType": "DECIMAL"
        },
        {
            "name": "quantity",
            "dataType": "INTEGER",
            "required": true
        },
        {
            "name": "discount",
            "dataType": "DECIMAL",
            "required": true
        }
    ],
    "formulas": [
        {
            "valueType": "name",
            "formula": "{{orderID}}"
        },
        {
            "valueType": "total",
            "formula": "{{quantity}} * {{unitPrice}} * (1 - {{discount}})"
        }
    ],
    "relations": [
        {
            "type": "northwindModel.order",
            "required": true,
            "multiple": false
        },
        {
            "type": "northwindModel.product",
            "required": true,
            "multiple": false
        }
    ],
    "views": [
        {
            "name": "Overview",
            "defaultView": true,
            "relationView": true,
            "defaultSort": "product,order",
            "values": [
                "northwindModel.product",
                "northwindModel.order",
                "unitPrice",
                "quantity",
                "discount"
            ]
        }
    ]
}