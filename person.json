{
    "namespace": "commons",
    "name": "person",
    "type": "BASIC",
    "extendsType": "commons.entity",
    "nameValueType": "full-name",
    "valueTypes": [
        { "name": "full-name", "dataType": "TEXT"},
        { "name": "first-name", "dataType": "TEXT"},
        { "name": "last-name", "dataType": "TEXT"},
        { "name": "email-address", "dataType": "EMAIL"},
        { "name": "birthdate", "dataType": "DATE"}
    ],
    "activeValueTypes": [
        { "name": "full-name"},
        { "name": "first-name"},
        { "name": "last-name", "required": true}
